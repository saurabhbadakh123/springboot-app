FROM python:3.9-slim

WORKDIR /app

# 1. Copy requirements first (best practice)
COPY requirements.txt .  # Note the space before the dot

# 2. Install dependencies
RUN pip install -r requirements.txt

# 3. Copy ALL other files (proper syntax)
COPY . .  # First dot = source, second dot = destination (/app)

# 4. Run command
CMD ["python", "app.py"]
