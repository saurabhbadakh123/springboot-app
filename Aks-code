trigger: none  # CD pipeline typically triggers from a release or artifact

stages:
- stage: DeployToAKS
  displayName: 'Deploy to AKS'
  jobs:
  - job: Deploy
    displayName: 'Deploy using kubectl'
    pool:
      vmImage: 'ubuntu-latest'

    steps:

    - task: DownloadPipelineArtifact@2
      inputs:
        artifact: 'drop'
        path: '$(System.DefaultWorkingDirectory)/drop'

    - task: replacetokens@6
      inputs:
        rootDirectory: '$(System.DefaultWorkingDirectory)/drop'
        targetFiles: 'aks-deploy-from-acr.yaml'
        tokenPattern: 'custom'
        customTokenPattern: '#{(\w+)}#'
        writeBOM: false
        actionOnMissing: 'warn'
        keepToken: false
        encoding: 'auto'
        escapeType: 'auto'

    - task: KubectlInstaller@0
      inputs:
        kubectlVersion: 'latest'

    - task: Kubernetes@1
      displayName: 'kubectl apply'
      inputs:
        connectionType: 'Azure Resource Manager'
        azureSubscriptionEndpoint: '<your-service-connection-name>'  # e.g., 'for-modifiedcode'
        azureResourceGroup: 'myResourceGroup'
        kubernetesCluster: 'myAKSCluster'
        namespace: 'default'
        command: 'apply'
        useConfigurationFile: true
        configuration: '$(System.DefaultWorkingDirectory)/drop/aks-deploy-from-acr.yaml'
